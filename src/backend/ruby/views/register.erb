<!-- views/register.erb -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" type="text/css" href="/style.css" />
</head>
<body>
    <div class="page">
        <h2>Sign Up</h2>

        <% if flash[:error] %> 
            <div class="error"><strong>Error:</strong> <%= flash[:error] %></div>
        <% end %>

        <form action="/api/register" method="POST">
            <dl>
                <dt>Username:</dt>
                <dd>
                    <input
                        type="text"
                        name="username"
                        size="30"
                        value="<%= params[:username] %>"  <!-- Use params hash -->
                    />
                </dd>
                <dt>E-Mail:</dt>
                <dd>
                    <input
                        type="text"
                        name="email"
                        size="30"
                        value="<%= params[:email] %>"  <!-- Use params hash -->
                    />
                </dd>
                <dt>Password:</dt>
                <dd>
                    <input type="password" name="password" size="30" />
                </dd>
                <dt>Password <small>(repeat)</small>:</dt>
                <dd>
                    <input type="password" name="password2" size="30" />
                </dd>
            </dl>

            <div class="actions"><input type="submit" value="Sign Up" /></div>
        </form>
    </div>
</body>
</html>
